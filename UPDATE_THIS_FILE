// Include the V5 Library
#include "vex.h"

// Allows for easier use of the VEX Library
using namespace vex;

// Begin project code

void preAutonomous(void) {
  // actions to do when the program starts
  Brain.Screen.clearScreen();
  Brain.Screen.print("pre auton code");
  wait(1, seconds);

}

//passive arm for now. commented out all Arm motor stuff
void runArm() {
    //Arm.setPosition(Controller1.Axis2.position(),degrees);
}
void turnAround() {
  Drivetrain.turnFor(left, 180ll, degrees);
}
void autonomous(void) {
  Brain.Screen.clearScreen();
  Brain.Screen.print("autonomous code");
  Drivetrain.driveFor(forward, 5, inches, false);//if (Controller1.ButtonB.pressing()) {
  wings.set(true);
  Drivetrain.driveFor(reverse, 5, inches, true);
  wings.set(false);
}

void userControl(void) {
  Brain.Screen.clearScreen();
  // place driver control in this while loop
//set the drivetrain to stop here
Drivetrain.stop();
double armOut;
//bool canPress = true;
  while (true) {
    Intake.setVelocity(100,percent);
    if (Controller1.ButtonL1.pressing()) {
      wings.set(true);
    }
    else{
      wings.set(false);
    }
    armOut=Controller1.Axis2.position()*0.12;
    //Arm.spin(forward,armOut,volt);
    if (Controller1.ButtonR1.pressing()) {
      Intake.spin(forward, 12, volt);
    }
    else if (Controller1.ButtonR2.pressing()) {
      Intake.spin(reverse, 12, volt);
    }
    else{
      Intake.stop();
    }
    
    Controller1.ButtonA.pressed(turnAround);
    
      
  }
}
    
  
  



int main() {
  // create competition instance
  competition Competition;

  // Set up callbacks for autonomous and driver control periods.
  Competition.autonomous(autonomous);
  Competition.drivercontrol(userControl);

  // Run the pre-autonomous function.
  preAutonomous();

  // Prevent main from exiting with an infinite loop.
  
}
